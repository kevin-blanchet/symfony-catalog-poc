{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email: </label>
        <input class="form-control form-control-lg" type="text" id="username" name="_username" value="{{ last_username }}"/>
        <br/>
        <label for="password">Password: </label>
        <input class="form-control form-control-lg" type="password" id="password" name="_password"/>

        {# protecting against csrf attacks #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="mt-2 btn btn-dark" type="submit">Login</button>
        <a class="mt-2 btn btn-dark" href="{{ path('app_register') }}">Register</a>
    </form>
{% endblock %}
